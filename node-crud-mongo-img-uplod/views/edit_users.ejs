<%- include('layout/header')%>

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-success">
                    <h3 class="text-light">Edit User(<%= user.name %>)</h3>
                </div>
                <div class="card-body p-4">
                    <form action="/update/<%= user._id %>" method="post" id="add-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="name">Name</label>
                            <input type="text" name="name" class="form-control form-control-lg" placeholder="Enter name" value="<%= user.name %>">
                        </div>
                        <div class="mb-3">
                            <label for="email">Email</label>
                            <input type="email" name="email" class="form-control form-control-lg" placeholder="Enter email" value="<%= user.email %>">
                        </div>
                        <div class="mb-3">
                            <label for="phone">Phone</label>
                            <input type="phone" name="phone" class="form-control form-control-lg" placeholder="Enter Phone" value="<%= user.phone %>">
                            <img src="/<%= user.image %>" width="100" class="img-thumbnail mt-1">
                            <input type="hidden" name="old_image" value="<%= user.image %>">
                        </div>
                        <div class="mb-3">
                            <label for="image" class="form-label">Select Image</label>
                            <input class="form-control form-control-lg" type="file" name="image"/>
                        </div>
                        <div class="mb-3 d-grid">
                            <input type="submit" name="submit" value="Update User" class="btn btn-success btn-lg"/>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('layout/footer')%>